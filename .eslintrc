{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "meteor"
  ],
  "settings": {
    "import/resolver": "meteor",
  },
  "extends": [
    "airbnb",
    "plugin:meteor/recommended",
  ],

  "rules": {
    "semi": ["error", "never"],
    "padded-blocks": 0,
    "callback-return": 2,
    "consistent-return": 0,
    "no-console": 0,
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "no-underscore-dangle": 0,
    "no-confusing-arrow": 0,
    "no-nested-ternary": 0,
    "no-unresolved": 0,
    "func-names": 0,
    "no-multi-comp": 0,
    "react/no-multi-comp": 0,
    "react/prefer-stateless-function": 0,
    "meteor/audit-argument-checks": 0,
    "no-shadow": 0
  }
}
